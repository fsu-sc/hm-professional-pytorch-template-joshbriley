{
    "name": "Mnist_Over_Dynamic",
    "n_gpu": 0,
    "arch": {
      "type": "DynamicModel",
      "args": {}
    },
    "data_loader": {
      "type": "MnistDataLoader",
      "args": {
        "data_dir": "./data",
        "batch_size": 128,
        "shuffle": true,
        "validation_split": 0.05,
        "num_workers": 2
      }
    },
    "optimizer": {
      "type": "Adam",
      "args": {
        "lr": 0.0005,
        "weight_decay": 0.0001,
        "amsgrad": true
      }
    },
    "lr_scheduler": {
      "type": "StepLR",
      "args": {
        "step_size": 2,
        "gamma": 0.5
      }
    },
    "loss": "nll_loss",
    "metrics": ["accuracy", "top_k_acc"],
    "trainer": {
      "epochs": 40,
      "save_dir": "outputs/",
      "save_period": 5,
      "verbosity": 2,
      "monitor": "min val_loss",
      "early_stop": 5,
      "tensorboard": true
    }
  }
  
